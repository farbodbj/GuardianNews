<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GuardianNews" parent="Theme.Material3.Light.NoActionBar">
        <item name="background">@color/white</item>

    </style>

    <style name="OverlayThemeWhite" parent="Base.Theme.GuardianNews">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="OverlayThemeSkyBlue" parent="Base.Theme.GuardianNews">
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryDark">@color/sky_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/sky_blue</item>
        <item name="titleTextAppearance">@style/toolBarTitle</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="OverlayThemeDarkBlue" parent="Base.Theme.GuardianNews">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverlayThemeGreen" parent="Base.Theme.GuardianNews">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverlayThemeLightGreen" parent="Base.Theme.GuardianNews">
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryDark">@color/light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="toolBarTitle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/vogue</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontWeight">900</item>
    </style>

    <style name="toolBarTitle.black" parent="toolBarTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="toolBarTitle.white" parent="toolBarTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabItemText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/tab_item_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/vogue</item>

        <item name="android:fontStyle">normal</item>
        <item name="android:fontWeight">900</item>
    </style>

    <style name="TextAppearance.White" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>